@model Test1.Models.ResultsModel
@{
    ViewBag.Title = "Read";
}

<h2>Read</h2>
<table>
    <thead>
        <tr>
            <th>Name: </th>
            <th>Price: </th>
            <th>Style: </th>
        </tr>
    </thead>
        <tbody>
            @if (Model.results.Count > 0)
            {
                for (int i = 0; i < Model.results.Count; i++)
                {
                    <tr>
                        <td>@Model.results[i].Name</td>
                        <td>@Model.results[i].Price</td>
                        <td>@Model.results[i].Style</td>
                    </tr>
                }
            }
            else
            {
                <div>No entries found</div>
            }
        </tbody>
</table>


